.panel-body
  = form_for user, html: {class: 'form-horizontal', role: 'form'} do |f|
    = f.hidden_field :building_id, value: user.id
    .form-group.field
      = f.label :full_name, 'Повне ім’я:'
      = f.text_field :full_name, class: 'form-control'
    .form-group.field
      = f.label :email, 'E-mail'
      = f.text_field :email, class: 'form-control'
    .form-group
      = f.submit action_name == 'edit' ? 'Обновити' : 'Створити', class: 'form-control btn btn-primary submit-button'