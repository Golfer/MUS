.container
  .row
    .main
      %h3
        Please Log In, or
        - if devise_mapping.registerable? && controller_name != 'registrations'
          = link_to 'Sign up', new_registration_path(resource_name)
      .row
        .col-xs-4.col-sm-4.col-md-4
          %a.btn.btn-lg.btn-danger.btn-block{href: "#"} Google +
        .col-xs-4.col-sm-4.col-md-4
          %a.btn.btn-lg.btn-info.btn-block{href: "#"} Facebook
        .col-xs-4.col-sm-4.col-md-4
          %a.btn.btn-lg.btn-primary.btn-block{href: "#"} Twitter
      .login-or
        %hr.hr-or
          %span.span-or or
      = form_for(resource, as: resource_name, url: session_path(resource_name), role: 'form')  do |f|
        .form-group
          = f.label :email
          = f.email_field :email, autofocus: true, class: 'form-control'
        .form-group
          - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
            = link_to "Forgot your password?", new_password_path(resource_name), class: 'pull-right'
          = f.label :password
          = f.password_field :password, autocomplete: "off", class: 'form-control'
        .checkbox.pull-right
          %label
            = f.check_box :remember_me
            = f.label :remember_me
        %button.btn.btn.btn-primary{type: "submit"}
          Log In
-#= render "devise/shared/links"
