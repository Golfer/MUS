.row
  .col-sm-12.col-lg-12.col-md-12
    = link_to new_area_path, class: 'btn btn-default btn-block btn-dashboard' do
      %i.fa-4x.pull-left
      %em Area +
.row
  .col-sm-12.col-lg-12.col-md-12
    %h3 Areas
    %table.table.table-bordered
      %tr
        %th= 'Area'
        %th= 'Description area'
        %th.mw15
        %th.mw15
        - @areas.each do |area|
          %tr{data: {id: area.id}}
            %td= area.name
            %td= area.description
            %td
              .fa-hover.col-md-2.col-sm-2
                = link_to edit_area_path(area), class: 'btn btn-default btn-sm', title: 'edit Area' do
                  %i.fa.fa-pencil
            %td
              .fa-hover.col-md-1.col-sm-1
                = link_to areas_path(area), method: :delete, class: 'btn btn-danger btn-sm', data: { remote: true } do
                  %i.fa.fa-trash
